<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:layout_centerInParent="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:text="@string/hello"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorRegister" />

    <TextView
        android:id="@+id/subtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hello"
        android:layout_centerHorizontal="true"
        android:text="@string/main_subtext"
        android:textColor="@color/colorRegister"
        android:textSize="@dimen/subtitle_text" />

    <ImageButton
        android:id="@+id/register_but"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/get_more_but"
        android:layout_below="@+id/subtext"
        android:layout_marginTop="20dp"
        android:onClick="registerClick"
        android:background="@drawable/button_main" />

    <ImageButton
        android:id="@+id/vote_but"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/register_but"
        android:layout_toEndOf="@+id/hello"
        android:background="@drawable/button_main" />

    <ImageButton
        android:id="@+id/get_more_but"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/button_main"
        android:layout_below="@+id/register_but"
        android:layout_toStartOf="@+id/hello" />

    <ImageButton
        android:id="@+id/invite_but"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/button_main"
        android:layout_alignTop="@+id/get_more_but"
        android:layout_alignStart="@+id/vote_but" />

</RelativeLayout>